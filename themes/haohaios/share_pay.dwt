<script language="javascript" type="text/javascript">
 wx.config({
    debug: false, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
    appId: '{$appid}', // 必填，公众号的唯一标识
    timestamp: '{$timestamp}', // 必填，生成签名的时间戳
    nonceStr: '{$timestamp}', // 必填，生成签名的随机串
    signature: '{$signature}',// 必填，签名，见附录1
    jsApiList: ['onMenuShareTimeline','onMenuShareAppMessage','hideMenuItems'] // 必填，需要使用的JS接口列表，所有JS接口列表见附录2
});
wx.ready(function(){
    wx.hideMenuItems({
        menuList: ['menuItem:share:timeline'] // 要隐藏的菜单项，只能隐藏“传播类”和“保护类”按钮，所有menu项见附录3
    });
    wx.onMenuShareTimeline({
        title: '一米鲜超值赣南脐橙（小个）！一起来购买，坐享新鲜水果送上门！', // 分享标题
        link: 'http://x.1mxian.com', // 分享链接
        imgUrl: 'http://7sbnc0.com2.z0.glb.qiniucdn.com/material/hot_new/new/gannanqicheng_01_1030.jpg?imageView2/2/w/640', // 分享图标
        success: function () {
            new xian.alertBox({
                boxContent : '分享到朋友圈有可能会被微信屏蔽哟！建议直接将团购分享给您的朋友或微信群。'
            });
        },
        cancel: function () {

        }
    });
    wx.onMenuShareAppMessage({
        title: '一米鲜「团水果」，超省钱，还包邮，速来参团！', // 分享标题
        desc: '一米鲜超值赣南脐橙（小个）团购！一起来血拼，坐享新鲜水果送上门！',
        link: 'http://'+window.location.hostname+'/goods/buyingGroup/17030', // 分享链接
        imgUrl: 'http://7sbnc0.com2.z0.glb.qiniucdn.com/material/hot_new/new/gannanqicheng_01_1030.jpg?imageView2/2/w/640', // 分享图标
        success: function () {

        },
        cancel: function () {

        }
    });
});


